require 'csv'
require 'date'

sub_time=DateTime.parse("00:00:00.000")
sub=String.new
i=0
File.open(ARGV[0],"r").each do |line|
	if line=~ /-->/
		i=-30000
		puts DateTime.parse(line.split(" --> ")[1])-DateTime.parse(line.split(" --> ")[0])
		if sub_time<=DateTime.parse(line.split(" --> ")[1])-DateTime.parse(line.split(" --> ")[0])
			sub_time=DateTime.parse(line.split(" --> ")[1])-DateTime.parse(line.split(" --> ")[0])
			sub=String.new
			i=0		
		end
	elsif i>0 && line!=""
		sub+=line
	end
	i+=1
end
puts sub_time
puts sub
